                </plugins>
            </build>
        </profile>
        <profile>
            <id>tinkerpop-structure-test</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.20</version>
                        <executions>
                            <execution>
                                <id>tinkerpop-structure-test</id>
                                <goals>
                                    <goal>test</goal>
